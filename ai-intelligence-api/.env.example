# API Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
API_TITLE=AI Intelligence API
API_VERSION=1.0.0

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# Default AI Provider (groq, ollama, openai, anthropic)
DEFAULT_AI_PROVIDER=groq

# Groq Configuration (Fast & Cheap - Recommended)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_MAX_TOKENS=2000

# Ollama Configuration (Local & Free - Best for cost savings)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:latest
OLLAMA_TIMEOUT=60

# OpenAI Configuration (Premium)
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=2000

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600

# Cost Management
MAX_TOKENS_PER_REQUEST=2000
ENABLE_TOKEN_BUDGET=true
DAILY_TOKEN_BUDGET=1000000
MONTHLY_TOKEN_BUDGET=30000000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Interview Engine Settings
DEFAULT_INTERVIEW_DURATION_MINUTES=30
MAX_QUESTIONS_PER_INTERVIEW=20
ENABLE_ADAPTIVE_DIFFICULTY=true

# Security (Optional)
API_KEY_HEADER=X-API-Key
REQUIRE_API_KEY=false
ALLOWED_API_KEYS=key1,key2,key3

# Monitoring & Logging
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=9090

# Resume Builder Integration
RESUME_BUILDER_API_URL=http://localhost:8080/api
QUESTION_BANK_SYNC_ENABLED=true
