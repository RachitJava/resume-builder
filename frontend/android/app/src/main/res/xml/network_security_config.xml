<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow all HTTPS connections -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Specific domain configuration for Fly.io -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">fly.dev</domain>
        <domain includeSubdomains="true">resume-builder-app-misty-waterfall-5852.fly.dev</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>
